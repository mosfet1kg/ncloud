{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2015"],
    "module": "commonjs",
    "declaration": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "importHelpers": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitThis": false,
    "alwaysStrict": true,
    "experimentalDecorators": true,
    "outDir":"lib"
//    "rootDir": "src",
//    "sourceMap": true
  },
  "include": [
    "src/**/*"
//    "__tests__/**/*"
  ],
  "exclude": [
    "out",
    "lib",
    "node_modules",
    "example"
  ]
}
