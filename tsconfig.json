{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es2015"],
    "module": "commonjs",
    "declaration": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "importHelpers": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitThis": false,
    "alwaysStrict": true,
    "experimentalDecorators": true,
    "outDir":"lib",
    "sourceMap": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "out",
    "lib",
    "node_modules",
    "example",
    "__tests__/**/*",
    "src/ncloud"
  ]
}
